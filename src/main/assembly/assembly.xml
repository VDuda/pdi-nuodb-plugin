<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>LICENSE</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.nuodb.pentaho:pdi-nuodb-plugin</include>
            </includes>
            <outputFileNameMapping>pdi-nuodb-plugin.jar</outputFileNameMapping>
            <unpack>false</unpack>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.nuodb.jdbc:nuodb-jdbc:jar:2.0.3</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>nuodb-jdbc.jar</outputFileNameMapping>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
